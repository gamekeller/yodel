{
  "apps": [{
    "name": "yodel",
    "script": "index.js",
    "exec_mode": "fork",
    "exec_interpreter": "babel-node",
    "log_date_format": "YYYY-MM-DD HH:mm Z"
  }],
  "deploy": {
    "production": {
      "user": "node",
      "host": "web.hosts.gamekeller.net",
      "ref": "origin/master",
      "repo": "https://github.com/gamekeller/yodel.git",
      "path": "/home/node/yodel",
      "post-deploy": "npm install && sudo -H /usr/bin/pm2 startOrRestart ecosystem.json"
    }
  }
}
